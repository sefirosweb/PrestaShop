    "version": "0.2.0",
    "configurations": [
        {
            "name": "WSL for Xdebug",
            "type": "php",
            "request": "launch",
            "hostname": "0.0.0.0",
            "port": 9911,
            "pathMappings": {
                "/var/www/html": "${workspaceRoot}/"
            },
            "xdebugSettings": {
                "max_children": 128,
                "max_data": -1,
                "max_depth": 5
            }
        }
    ]
}